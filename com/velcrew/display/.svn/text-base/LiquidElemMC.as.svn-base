/* AS3	Copyright 2009 __velcrew__.		www.velcrew.com*/package  com.velcrew.display{	import flash.display.Sprite;	import flash.events.Event;		import gs.TweenLite;	import gs.easing.*	/**	 *	 *	Liquid Element MC v0.2.1	 *		 *	change package name -> now display instead of utils	 *		 *		 *	Liquid Element MC v0.2	 *		 *	add param delay --> optional - "default = .3"	 *		 *	Liquid Element MC v0.1	 *		 *	Dependencies TweenLite v10.09 (http://blog.greensock.com/tweenliteas3/)	 *		 *	@langversion ActionScript 3.0	 *	@playerversion Flash 9.0	 *	 *	@author Luis Teixeira aka Fraude	 *	@since  2009-04-07	 */	public class LiquidElemMC extends Sprite {				private var _reference  :Sprite;	    public  var _elem  		:Sprite;		public var content 		:Sprite;		private var _posx 		:Number;		private var _posy 		:Number;		private var _animated   :Boolean;		private var _time 		:Number;		private var _delay 		:Number;						public function LiquidElemMC(mc:Sprite,posx, posy,animated = false,time = 1, delay = .3){						addEventListener( Event.ADDED_TO_STAGE, init );			_reference = mc;			_posx = posx;			_posy = posy;			_animated = animated;			_time =  time;			_delay = delay;				}				private function init( event:Event ) : void		{						removeEventListener(Event.ADDED_TO_STAGE, init);		    //stage.addEventListener(Event.RESIZE, fullBg);		    setElem();		}				private function setElem(e:Event = null):void		{			//trace(_reference.width);						var oldTile:Sprite  = content;		    content = new Sprite();			content = _reference;			content.x = _posx;			content.y = _posy;					    addChild(content);					}				private function fullBg(e:Event = null):void		{			if (_animated)			{				TweenLite.to(content, _time, {x:_posx, y:_posy,delay:_delay, ease:Back.easeOut});							} else {								content.x = _posx;				content.y = _posy;			}					}				public function update(posx, posy) : void 		{			_posx = posx;			_posy = posy;			fullBg();		}	}	}